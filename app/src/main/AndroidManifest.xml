<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.example.uta.lec3_code_sample"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.uta.lec3_code_sample.DetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName="com.example.uta.lec3_code_sample.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.uta.lec3_code_sample.MainActivity"/>
        </activity>
    </application>

</manifest>